<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <me.timschneeberger.rootlessjamesdsp.preference.SwitchPreferenceGroup
        android:key="@string/key_spectrum_ext_enable"
        android:disableDependentsState="false"
        android:title="@string/spectrum_ext_enable"
        android:icon="@drawable/ic_twotone_auto_fix_high_24"
        app:iconSpaceReserved="false">

        <ListPreference
            android:key="@string/key_spectrum_ext_strength_unit"
            android:title="@string/spectrum_ext_strength_unit"
            android:defaultValue="@string/strength_unit_value_percent"
            android:entries="@array/spectrum_strength_units"
            android:entryValues="@array/spectrum_strength_units_values"
            app:allowDividerAbove="false"
            app:iconSpaceReserved="false" />

        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
            android:key="@string/key_spectrum_ext_strength_percent"
            android:title="@string/spectrum_ext_strength"
            android:defaultValue="10"
            app:minValue="0"
            app:maxValue="100"
            app:unit=" %"
            app:allowDividerAbove="false"
            app:updatesContinuously="true"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false" />

        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
            android:key="@string/key_spectrum_ext_strength_db"
            android:title="@string/spectrum_ext_strength"
            android:defaultValue="-20"
            app:minValue="-40"
            app:maxValue="0"
            app:unit=" dB"
            app:precision="1"
            app:allowDividerAbove="false"
            app:updatesContinuously="true"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false" />

        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
            android:key="@string/key_spectrum_ext_ref_freq"
            android:title="@string/spectrum_ext_ref_freq"
            android:defaultValue="7600"
            app:minValue="20"
            app:maxValue="20000"
            app:unit=" Hz"
            app:allowDividerAbove="false"
            app:updatesContinuously="true"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false" />

        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
            android:key="@string/key_spectrum_ext_wet_mix"
            android:title="@string/spectrum_ext_wet_mix"
            android:defaultValue="100"
            app:minValue="0"
            app:maxValue="100"
            app:unit=" %"
            app:allowDividerAbove="false"
            app:updatesContinuously="true"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false" />

        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
            android:key="@string/key_spectrum_ext_post_gain"
            android:title="@string/spectrum_ext_post_gain"
            android:defaultValue="0"
            app:minValue="-24"
            app:maxValue="24"
            app:unit=" dB"
            app:allowDividerAbove="false"
            app:updatesContinuously="true"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:key="@string/key_spectrum_ext_safety"
            android:title="@string/spectrum_ext_safety"
            android:defaultValue="false"
            android:summary="@string/spectrum_ext_safety_summary"
            app:allowDividerAbove="false"
            app:iconSpaceReserved="false" />

        <PreferenceCategory
            app:title="@string/spectrum_ext_expert_header"
            app:iconSpaceReserved="false">

            <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
                android:key="@string/key_spectrum_ext_hp_q"
                android:title="@string/spectrum_ext_hp_q"
                android:defaultValue="0.717"
                app:minValue="0.1"
                app:maxValue="3.0"
                app:precision="3"
                app:allowDividerAbove="false"
                app:updatesContinuously="true"
                app:showSeekBarValue="true"
                app:iconSpaceReserved="false" />

            <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
                android:key="@string/key_spectrum_ext_lp_q"
                android:title="@string/spectrum_ext_lp_q"
                android:defaultValue="0.717"
                app:minValue="0.1"
                app:maxValue="3.0"
                app:precision="3"
                app:allowDividerAbove="false"
                app:updatesContinuously="true"
                app:showSeekBarValue="true"
                app:iconSpaceReserved="false" />

            <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
                android:key="@string/key_spectrum_ext_lp_offset"
                android:title="@string/spectrum_ext_lp_offset"
                android:defaultValue="2000"
                app:minValue="0"
                app:maxValue="12000"
                app:unit=" Hz"
                app:allowDividerAbove="false"
                app:updatesContinuously="true"
                app:showSeekBarValue="true"
                app:iconSpaceReserved="false" />

            <EditTextPreference
                android:key="@string/key_spectrum_ext_harmonics"
                android:title="@string/spectrum_ext_harmonics"
                android:defaultValue="0.02;0;0.02;0;0.02;0;0.02;0;0.02;0"
                android:dialogTitle="@string/spectrum_ext_harmonics"
                android:inputType="textMultiLine"
                app:useSimpleSummaryProvider="true"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>

    </me.timschneeberger.rootlessjamesdsp.preference.SwitchPreferenceGroup>
</PreferenceScreen>
